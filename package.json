{
  "name": "twinlogy-idn",
  "version": "1.0.0",
  "description": "TWINLOGY IDN - Digital Twin Sensor Platform with HTTPS support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "set NODE_ENV=development && node server.js",
    "sensor": "node sensor.js",
    "sensor:https": "set USE_HTTPS=true && node sensor.js",
    "gen-cert": "node generate-cert.js",
    "setup-domain": "powershell -ExecutionPolicy Bypass -File setup-domain.ps1"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "selfsigned": "^3.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1"
  }
}
